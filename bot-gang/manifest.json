  {
    "name": "gang-trump bot",
    "version": "1.0",
    "description": "Bot for gang-trump",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["http://gang-trump.gree-pf.net/*"],
        "js": ["main.js"]
      }
    ],
    "manifest_version": 2
  }
